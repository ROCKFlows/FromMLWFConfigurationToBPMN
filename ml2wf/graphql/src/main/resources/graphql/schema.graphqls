type Query {
    # configuration queries
    configuration(name: ID!): Configuration
    configurations: [Configuration]
    # version queries
    versions: [Version]!
    lastVersion: Version!
    # workflow queries
    workflow(versionName: String!): Workflow!
}

type Configuration {
    name: ID!
    features: [Feature!]!
}

enum FeatureSelectionStatus {
    SELECTED,
    UNSELECTED,
    UNDEFINED,
}

type Feature {
    name: ID!
    automatic: FeatureSelectionStatus!
    manual: FeatureSelectionStatus!
}

type Version {
    name: ID!
    major: Int!
    minor: Int!
    patch: Int!
}

type WorkflowTask {
    name: String!
    description: String
    isAbstract: Boolean!
    isOptional: Boolean!
}

type Workflow {
    tasks: [WorkflowTask!]!
}
